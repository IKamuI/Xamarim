<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App01_consultarCEP"
             x:Class="App01_consultarCEP.MainPage">

    <StackLayout BackgroundColor="#FFBF00" Padding="30" Spacing="30">
        <!-- Place new controls here -->
        <Image Source="logo.jpeg" HeightRequest="200" WidthRequest="200"/>
        <Entry Placeholder="Digite o CEP" PlaceholderColor="#FFBF00" BackgroundColor="#FFFFFF" x:Name="CEP"/>
        <Button Text="Buscar CEP" TextColor="#FFFFFF" BackgroundColor="Blue" x:Name="BOTAO"/>
        
        <Label Text="" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" x:Name="RESULTADO" BackgroundColor="White" WidthRequest="400" HeightRequest="200"/>
    </StackLayout>

</ContentPage>
